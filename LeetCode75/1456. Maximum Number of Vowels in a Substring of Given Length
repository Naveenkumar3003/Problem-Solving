class Solution {
public:
    bool isVowel(char c){
        return c=='a' || c=='e' || c=='i' || c=='o' || c=='u';
    }
    int maxVowels(string s, int k) {
        int cnt=0,maxCnt=0;
        for(int i=0;i<k;i++){
            if(isVowel(s[i])) cnt++;
        }
        maxCnt=cnt;
        for(int i=k;i<s.length();i++){
            if(isVowel(s[i]))
                cnt++;
            if(isVowel(s[i-k]))
                cnt--;
            maxCnt=max(cnt,maxCnt);
        }
        return maxCnt;
    }
};
