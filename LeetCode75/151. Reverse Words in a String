class Solution {
public:
    string reverseWords(string s) {
        int n = s.length();
        string temp = "", ans = "";
        
        for (int i = 0; i < n; i++) {
            if (s[i] != ' ') {
                temp += s[i];
            } else {
                if (!temp.empty()) {
                    ans = temp + (ans.empty() ? "" : " ") + ans;
                    temp = "";
                }
            }
        }

        // Add the last word if it exists
        if (!temp.empty()) {
            ans = temp + (ans.empty() ? "" : " ") + ans;
        }

        return ans;
    }
};
